---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Lightweight SleepAPI to simulate loading state for you projects" />
		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Olalekan Adekanmbi" />
		<meta name="og:description" content="Lightweight SleepAPI to simulate loading state for you projects" />
		<meta property="og:viewport" content="width=device-width" />
		<meta property="og:author" content="Olalekan Adekanmbi" />
		<meta property="og:image" content="https://github.com/crazycodestar/SleepAPI-frontend/blob/main/public/Group%203.png?raw=true" />
		<meta property="og:image:width" content="348"/>
